{
  "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
  "extends": ["ultracite"],
  "files": {
    "includes": ["src/**/*"]
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noArrayIndexKey": "off",
        "noEmptyBlockStatements": "off"
      },
      "nursery": {
        "noShadow": "off",
        "noUnknownAtRule": "off"
      }
    }
  }
}
